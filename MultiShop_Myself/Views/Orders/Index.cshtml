@model IEnumerable<MultiShop_Myself.Models.Order>

@{
    ViewBag.Title = "Hóa đơn bán hàng";
}

<h2>Danh mục hóa đơn</h2>

<p>
    @Html.ActionLink("Thêm hóa đơn", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã HĐ
        </th>
        <th>
            Ngày lập hóa đơn
        </th>
        <th>
            Ngày giao hàng
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Index", "OrderDetails", new { Id = item.Id })">
                @Html.DisplayFor(modelItem => item.Id)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receiver)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Xem chi tiết", "Details", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
